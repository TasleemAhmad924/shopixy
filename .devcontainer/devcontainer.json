{
  "name": "Node.js & Mongo DB",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}", // Configure tool-specific properties.

  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "mongodb.mongodb-vscode",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "mgmcdermott.vscode-language-babel",
        "formulahendry.auto-rename-tag"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "installTools": true,
      "version": "os-provided"
    },
    "ghcr.io/hspaans/devcontainer-features/django-upgrade:1": {
      "version": "latest"
    }
  }, // Use 'forwardPorts' to make a list of ports inside the container available locally.

  "forwardPorts": [3000, 27017], // Use 'postCreateCommand' to run commands after the container is created.

  "postCreateCommand": "npm install next typescript @types/react @types/node" // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root. // "remoteUser": "root"
}
